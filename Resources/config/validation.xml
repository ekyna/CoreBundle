<?xml version="1.0" encoding="UTF-8" ?>
<constraint-mapping
    xmlns="http://symfony.com/schema/dic/constraint-mapping"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                        http://symfony.com/schema/dic/constraint-mapping/constraint-mapping-1.0.xsd">

    <!-- TODO remove (move in admin bundle for site address) -->
    <class name="Ekyna\Bundle\CoreBundle\Entity\AbstractAddress">
        <property name="street">
            <constraint name="NotBlank" />
            <constraint name="Length">
                <option name="min">3</option>
                <option name="max">255</option>
            </constraint>
        </property>
        <property name="supplement">
            <constraint name="Length">
                <option name="min">3</option>
                <option name="max">255</option>
            </constraint>
        </property>
        <property name="postalCode">
            <constraint name="NotBlank" />
            <constraint name="Length">
                <option name="min">3</option>
                <option name="max">16</option>
            </constraint>
        </property>
        <property name="city">
            <constraint name="NotBlank" />
            <constraint name="Length">
                <option name="min">3</option>
                <option name="max">64</option>
            </constraint>
        </property>
        <property name="country">
            <constraint name="NotBlank" />
            <constraint name="Country" />
        </property>
        <property name="state">
            <constraint name="Length">
                <option name="min">3</option>
                <option name="max">64</option>
            </constraint>
        </property>
        <constraint name="Ekyna\Bundle\CoreBundle\Validator\Constraints\Address" />
    </class>

    <class name="Ekyna\Bundle\CoreBundle\Model\Upload">
        <constraint name="Ekyna\Bundle\CoreBundle\Validator\Constraints\Uploadable" />
        <property name="file">
            <constraint name="File" />
        </property>
    </class>

</constraint-mapping>
