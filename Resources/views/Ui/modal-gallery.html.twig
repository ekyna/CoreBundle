{% spaceless %}
    <div id="modal-gallery" class="modal fade" tabindex="-1" role="dialog" aria-hidden="true">
	  <div class="modal-dialog">
		<div class="modal-content">
		  <div class="modal-header">
			<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
			<h4 class="modal-title">Modal title</h4>
		  </div>
		  <div class="modal-body">
			<div class="modal-image"></div>
		  </div>
		  <div class="modal-footer">
			<button type="button" class="btn btn-primary btn-prev">{{ 'ekyna_core.button.previous'|trans }}</button>
			<button type="button" class="btn btn-primary btn-next">{{ 'ekyna_core.button.next'|trans }}</button>
			<button type="button" class="btn btn-default" data-dismiss="modal">{{ 'ekyna_core.button.close'|trans }}</button>
		  </div>
		</div>
	  </div>
	</div>
{% endspaceless %}