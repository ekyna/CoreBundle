{% block button %}
{% spaceless %}
<{{ tag }} {{ block('attributes') }}>{{ block('icon') }} {{ block('label') }}</{{ tag }}>
{% endspaceless %}
{% endblock button %}

{% block label %}
{% spaceless %}
{% if label %}{{ label|trans|raw }}{% endif %}
{% endspaceless %}
{% endblock label %}

{% block icon %}
{% spaceless %}
{% if icon %}<span class="{{ icon }}"></span>{% endif %}
{% endspaceless %}
{% endblock icon %}

{% block dropdown %}
{% spaceless %}
<div class="btn-group">
    <button {{ block('attributes') }}>
        {{ block('icon') }} {{ block('label') }} <span class="caret"></span>
    </button>
    <ul class="dropdown-menu{% if right %} dropdown-menu-right{% endif %}">
        {% for action_label, action_path in actions -%}
        <li><a href="{{ action_path }}">{{ action_label|trans|raw }}</a></li>
        {%- endfor %}
    </ul>
</div>
{% endspaceless %}
{% endblock dropdown %}

{% block attributes %}
{% spaceless %}
{%- for attrname, attrvalue in attr -%}
    {{- " " -}}
    {%- if attrname in ['placeholder', 'title'] -%}
        {{- attrname }}="{{ attrvalue|trans({}, translation_domain) }}"
    {%- elseif attrvalue is same as(true) -%}
        {{- attrname }}="{{ attrname }}"
    {%- elseif attrvalue is not same as(false) -%}
        {{- attrname }}="{{ attrvalue }}"
    {%- endif -%}
{%- endfor -%}
{% endspaceless %}
{% endblock attributes %}

{% block no_image %}
{% spaceless %}
{% if no_image_path|length > 0 %}
    <img src="{{ no_image_path }}" alt="{{ 'ekyna_core.image.new'|trans }}"{{ block('attributes') }} />
{% else %}
    <img src="http://placehold.it/145x96/f7f7f7/6e829b&text={{ 'ekyna_core.image.new'|trans|replace({' ': '+'}) }}" alt="{{ 'ekyna_core.image.new'|trans }}"{% if style|length > 0 %} style="{{ style }}"{% endif %} />
{% endif %}
{% endspaceless %}
{% endblock no_image %}
